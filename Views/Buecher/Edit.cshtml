@model BuecherVerwaltungEmpty.Data.Buch

@{
    ViewData["Title"] = "Buch bearbeiten";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="mb-5 text-center display-1 fw-bold text-white-50">@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" class="card p-4 shadow-sm bg-light text-dark">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Titel" class="form-label">Titel</label>
            <input asp-for="Titel" class="form-control" />
            <span asp-validation-for="Titel" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Autor" class="form-label">Autor</label>
            <input asp-for="Autor" class="form-control" />
            <span asp-validation-for="Autor" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Verlag" class="form-label">Verlag</label>
            <input asp-for="Verlag" class="form-control" />
            <span asp-validation-for="Verlag" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Jahr" class="form-label">Erscheinungsjahr</label>
            <input asp-for="Jahr" class="form-control" />
            <span asp-validation-for="Jahr" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IstGelesen" class="form-check-input" />
            <label asp-for="IstGelesen" class="form-check-label">Bereits gelesen</label>
        </div>

        <div class="mb-3">
            <label asp-for="Bewertung" class="form-label">Bewertung (0–5)</label>
            <input asp-for="Bewertung" class="form-control" type="number" min="0" max="5" />
            <span asp-validation-for="Bewertung" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Zurück</a>
            <button type="submit" class="btn btn-primary">Änderungen speichern</button>
        </div>
    </form>
</div>
