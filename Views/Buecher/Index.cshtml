@model IEnumerable<BuecherVerwaltungEmpty.Data.Buch>

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>B√ºcherliste</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold">B√ºcherliste</h1>
        <p class="text-muted">Alle eingetragenen B√ºcher auf einen Blick</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                <tr>
                    <th scope="col">Titel</th>
                    <th scope="col">Autor</th>
                    <th scope="col">Verlag</th>
                    <th scope="col">Jahr</th>
                    <th scope="col">Aktion</th>
                    <th scope="col">Bewertung</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var buch in Model)
                {
                    <tr>
                        <td>@buch.Titel</td>
                        <td>@buch.Autor</td>
                        <td>@buch.Verlag</td>
                        <td>@buch.Jahr</td>
                        <td>
                            <form asp-action="MarkAsRead" asp-controller="Buecher" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@buch.Id" />
                                <button type="submit" class="btn btn-success btn-sm">‚úî Gelesen</button>
                            </form>
                            <a asp-action="Edit" asp-route-id="@buch.Id" class="btn btn-warning btn-sm ms-1">‚úèÔ∏è</a>
                            <form asp-action="Delete" asp-controller="Buecher" method="post" class="d-inline ms-1"
                                  onsubmit="return confirm('Willst du dieses Buch wirklich l√∂schen?');">
                                <input type="hidden" name="id" value="@buch.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">üóëÔ∏è</button>
                                <td>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= buch.Bewertung)
                                        {
                                            <span style="color: gold;">&#9733;</span>
                                        }
                                        else
                                        {
                                            <span style="color: lightgray;">&#9733;</span>
                                        }
                                    }
                                </td>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-primary" asp-controller="Buecher" asp-action="Create">Buch hinzuf√ºgen</a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>