@model IEnumerable<BuecherVerwaltungEmpty.Data.Buch>

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>B端cherliste</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold">B端cherliste</h1>
        <p class="text-muted">Alle eingetragenen B端cher auf einen Blick</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                <tr>
                    <th scope="col">Titel</th>
                    <th scope="col">Autor</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var buch in Model)
                {
                    <tr>
                        <td>@buch.Titel</td>
                        <td>@buch.Autor</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-primary" asp-controller="Buecher" asp-action="Create">Buch hinzuf端gen</a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>