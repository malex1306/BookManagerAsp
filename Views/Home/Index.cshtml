@{
    ViewData["Title"] = "Bookmanager";
}

<style>
    .card-equal-height {
        min-height: 250px;
    }
    .card-milchig {
        background-color: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #000;
        
    }
    body {
        background-image: url('Assets/Pics/MainBackground.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-color: #121212;
        min-height: 100vh;
        margin: 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        
    }
</style>

<div class="container mt-1">
    <h1 class="mb-5 text-center display-1 fw-bold text-white-50">Bookmanager</h1>

    <div class="row justify-content-center g-4">
        <div class="col-sm-6 col-md-4 col-lg-3 d-flex">
            <div class="card shadow card-equal-height w-100 card-milchig">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title text-center">Meine Bücher</h5>
                        <h6 class="card-subtitle mb-2 text-muted text-center">Sieh dir deine Bücher an</h6>
                    </div>
                    <a asp-controller="Buecher" asp-action="Index" class="btn btn-secondary mt-3">Zur Bücherliste</a>
                </div>
            </div>
        </div>
        
        
            <div class="col-sm-6 col-md-4 col-lg-3 d-flex">
                <div class="card shadow card-equal-height w-100 card-milchig">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title text-center">Neues Buch</h5>
                            <h6 class="card-subtitle mb-2 text-muted text-center">Füge ein neues Buch hinzu</h6>
                        </div>
                        <a asp-controller="Buecher" asp-action="Create" class="btn btn-secondary mt-3">Buch hinzufügen</a>
                    </div>
                </div>
            </div>
            
        
            <div class="col-sm-6 col-md-4 col-lg-3 d-flex">
                <div class="card shadow card-equal-height w-100 card-milchig">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title text-center">Gelesene Bücher</h5>
                            <h6 class="card-subtitle mb-2 text-muted text-center">Bücher, die du gelesen hast</h6>
                        </div>
                        <a asp-controller="Buecher" asp-action="DontRead" class="btn btn-secondary mt-3">Ansehen</a>
                    </div>
                </div>
            </div>
        </div>
</div>
